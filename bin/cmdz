#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0116,C0413,W0212


"write your own commands"


import importlib
import importlib.util
import os
import sys


sys.path.insert(0, os.getcwd())


from cmdz import Cfg, CLI, Command, Wd
from cmdz import command, launch, parse, scan, scandir, scanpkg, wait
from cmdz import boot, importer, wrap


import opmod


Wd.workdir = os.path.expanduser("~/.cmdz")


def main():
    boot(" ".join(sys.argv[1:]))
    scandir("mod", importer, Cfg.sets.mods)
    cli = CLI()
    command(cli, Cfg.otxt)


wrap(main)
