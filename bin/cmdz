#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0116,C0413,W0212,W0406


"write your own commands"


import os
import sys


sys.path.insert(0, os.getcwd())


from cmdz import Cfg, CLI, Wd, boot, command, importer, initer, scandir, wrap


Cfg.name = "cmdz"
Wd.workdir = os.path.expanduser("~/.cmdz")


def main():
    boot(" ".join(sys.argv[1:]))
    scandir("modz", importer, Cfg.sets.mods or Cfg.mods or "cmds")
    scandir("modz", initer, Cfg.sets.mods or Cfg.mods or "cmds")
    cli = CLI()
    command(cli, Cfg.txt)


wrap(main)
